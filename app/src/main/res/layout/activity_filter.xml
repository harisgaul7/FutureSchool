<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FEFFFE"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1.0"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:adjustViewBounds="true"
                android:padding="12dp"
                android:src="@drawable/cancel" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:adjustViewBounds="true"/>

            <TextView
                android:text="Filter"
                android:textColor="#132131"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="serif-monospace"
                android:textSize="24dp"
                android:layout_weight=".4"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/txt_terapkan_filter"
                android:text="TERAPKAN"
                android:textColor="#0BE7EF"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-thin"
                android:textSize="12dp"
                android:layout_weight=".3"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:text="SORTIR MENURUT"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/rounded_image"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1.0"
            android:layout_height="40dp">

            <Spinner
                android:id="@+id/spin_filter"
                android:layout_weight=".9"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

            <ImageView
                android:src="@drawable/next"
                android:adjustViewBounds="true"
                android:padding="13dp"
                android:layout_weight=".1"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:text="TINGKAT SEKOLAH"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/rounded_image"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1.0"
            android:layout_height="40dp">

            <Spinner
                android:id="@+id/spin_tingkat"
                android:layout_weight=".9"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

            <ImageView
                android:src="@drawable/next"
                android:adjustViewBounds="true"
                android:padding="13dp"
                android:layout_weight=".1"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:text="BIAYA AWAL MASUK"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1.0"
            android:layout_height="40dp">

            <LinearLayout
                android:background="@drawable/rounded_image"
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight=".4"
                android:weightSum="1.0"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight=".05"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="Rp."
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#234233"
                    android:layout_weight=".2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/et_dari_awal"
                    android:textColor="#0A0C0A"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:layout_weight=".65"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <TextView
                android:text="sampai"
                android:gravity="center"
                android:textColor="#234233"
                android:layout_weight=".2"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:background="@drawable/rounded_image"
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight=".4"
                android:weightSum="1.0"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight=".05"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="Rp."
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#234233"
                    android:layout_weight=".2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/et_sampai_awal"
                    android:textColor="#0A0C0A"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:layout_weight=".65"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="BIAYA BULANAN"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1.0"
            android:layout_height="40dp">

            <LinearLayout
                android:background="@drawable/rounded_image"
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight=".4"
                android:weightSum="1.0"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight=".05"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="Rp."
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#234233"
                    android:layout_weight=".2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/et_dari_bulanan"
                    android:textColor="#0A0C0A"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:layout_weight=".65"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <TextView
                android:text="sampai"
                android:gravity="center"
                android:textColor="#234233"
                android:layout_weight=".2"
                android:layout_width="0dip"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:background="@drawable/rounded_image"
                android:orientation="horizontal"
                android:layout_width="0dip"
                android:layout_weight=".4"
                android:weightSum="1.0"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight=".05"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="Rp."
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#234233"
                    android:layout_weight=".2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/et_sampai_bulanan"
                    android:textColor="#0A0C0A"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:layout_weight=".65"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="KETERSEDIAAN FASILITAS"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_filter_fasilitas"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/hasil_filter_fasilitas"
            android:text="Hasil"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:visibility="gone"
            android:textSize="8dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="KETERSEDIAAN EKSTRAKULIKULER"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_filter_ekstrakulikuler"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/hasil_filter_ekstrakulikuler"
            android:text="Hasil"
            android:textColor="#E1A709"
            android:gravity="start|center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:visibility="gone"
            android:textSize="8dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>