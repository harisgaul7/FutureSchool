<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F1F7F3"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="95dp">

    <LinearLayout
        android:weightSum="1.0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight=".05"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/riv_gambar_recently"
            android:layout_width="0dip"
            android:layout_weight=".2"
            android:layout_height="match_parent"
            app:siRadius="10dp"
            app:siBorderWidth="1dp"
            android:layout_gravity="center"
            app:siBorderColor="#234323"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:siSquare="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight=".05"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:weightSum="1.0"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_nama_recently"
                android:text="SMKF Ikasari Pekanbaru"
                android:textColor="#234232"
                android:textStyle="bold"
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <TextView
                android:id="@+id/txt_alamat_recently"
                android:text="Jl. Mawar No.98, Simpang Baru, Kec.Tampan"
                android:textColor="#234232"
                android:layout_weight=".15"
                android:textSize="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <View
                android:layout_weight=".05"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:background="#050404"/>


            <TextView
                android:id="@+id/txt_pendaftaran_recently"
                android:text="Pendaftaran : Rp. 3.450.000"
                android:textColor="#234232"
                android:layout_weight=".2"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <TextView
                android:id="@+id/txt_spp_recently"
                android:text="Bulanan : Rp. 450.000"
                android:textColor="#234232"
                android:layout_weight=".2"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <TextView
                android:id="@+id/txt_akreditasi_recently"
                android:text="Akreditasi A"
                android:textColor="#EDEFF1"
                android:layout_weight=".2"
                android:textAlignment="center"
                android:background="@drawable/notif_bg"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight=".05"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".1"
            android:layout_width="0dip"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_jarak_recently"
                android:textColor="#030504"
                android:gravity="center"
                android:text="Jarak 3 Km"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>