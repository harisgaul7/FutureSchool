<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Biaya"
            android:textColor="#070E0A"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Pendaftaran Awal"
            android:textColor="#070E0A"
            android:fontFamily="serif"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_biaya_awal"
                android:layout_marginTop="5dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Jumlah"
                    android:textColor="#234233"
                    android:gravity="start|center"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".73"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Rp. "
                    android:layout_marginRight="5dp"
                    android:textColor="#234233"
                    android:gravity="end|center"
                    android:fontFamily="serif"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".08"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txt_jumlah_biaya_awal"
                    android:layout_marginRight="5dp"
                    android:textColor="#234233"
                    android:gravity="end|center"
                    android:fontFamily="serif"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Uang Bulanan"
            android:textColor="#070E0A"
            android:fontFamily="serif"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_biaya_bulanan"
                android:scrollbars="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Jumlah"
                    android:textColor="#234233"
                    android:gravity="start|center"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight=".73"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Rp. "
                    android:layout_marginRight="5dp"
                    android:textColor="#234233"
                    android:gravity="end|center"
                    android:fontFamily="serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight=".08"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txt_jumlah_biaya_bulanan"
                    android:layout_marginRight="5dp"
                    android:textColor="#234233"
                    android:gravity="end|center"
                    android:fontFamily="serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_weight=".2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
